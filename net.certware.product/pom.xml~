<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>CertWare</artifactId>
		<groupId>net.certware.tycho.build</groupId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<groupId>net.certware.tycho.build</groupId>
	<artifactId>net.certware.product</artifactId>
	<version>1.1.0-SNAPSHOT</version>
	<packaging>eclipse-repository</packaging>
	<name>CertWare ABSA Build</name>

	<properties>
		<tycho.version>0.18.1</tycho.version>
		<tycho-extras.version>0.18.1</tycho-extras.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-repository-plugin</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<includeAllDependencies>true</includeAllDependencies>
					<createArtifactRepository>true</createArtifactRepository>
					<compress>true</compress>
					<repositoryName>${project.name}</repositoryName>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-director-plugin</artifactId>
				<version>${tycho.version}</version>
				<executions>
					<execution>
						<id>materialize-products</id>
						<goals>
							<goal>materialize-products</goal>
						</goals>
					</execution>
					<execution>
						<id>archive-products</id>
						<goals>
							<goal>archive-products</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
